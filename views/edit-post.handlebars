<article>
  <p><a href="/dashboard"> &larr; Back to dashboard</a></p>
  <h2>{{#if post.id}}Edit{{else}}New{{/if}} Post</h2>

  <form id="edit-form">
    <div>
      <input type="text" name="title" {{#if post.id}} value="{{post.title}}" {{/if}} placeholder="Post Title" />
    </div>
    <div>
      <textarea name="description" rows="5"
        placeholder="Post content...">{{#if post.description}}{{post.description}}{{/if}}</textarea>
    </div>
    <div>
      <input type="text" name="image_url" {{#if post.id}} value="{{post.image_url}}" {{/if}}
        placeholder="Upload a photo" readonly="readonly" />
    </div>
    Location:
    <input type="text" name="latitude" {{#if post.id}} value="{{post.latitude}}" {{/if}} placeholder="latitude" />
    <input type="text" name="longitude" {{#if post.id}} value="{{post.longitude}}" {{/if}} placeholder="longitude" />
    <div>
      {{#if post.id}}
      <p>
        by you on {{format_date post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural 'comment' post.comments.length}}</a>
      </p>
      {{/if}}
    </div>
    <div>
      <button type="submit">Save post</button>
      {{#if post.id}}<button type="button">Delete post</button>{{/if}}
    </div>
  </form>
</article>

{{#if post.id}}
{{> comments comments=post.comments loggedIn=loggedIn}}
{{/if}}

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="/javascript/edit-post.js"></script>
{{#if post.id}}
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
{{/if}}