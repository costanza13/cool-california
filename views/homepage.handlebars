<div class="title-bar">
  {{#if title}}
  <h1 id="homepage-header">{{title}}</h1>
  {{/if}}
  {{#if loggedIn}}
  <div class="filter-control">
    <select name="filter" class="filter-select">
      <option value="">Posts Matching...</option>
      <option value="all-posts">Anything</option>
      <option value="user-tags">Your Interests</option>
      <option value="user-likes">Your Likes</option>
    </select>
  </div>
  {{/if}}
</div>
{{#each posts}}
<article id="post-{{id}}" class="post">
  <div class="spd1">
    <h2><a id="titttle" href="/post/{{id}}">{{title}}</a></h2>
    {{#if image_url}}
    <img class="place-image small" src="{{image_url}}" />
    {{/if}}
  </div>
  <div class="spd2">
    <p>Posted by <a id="black" class="italic-h" href="/user/{{user.post_author_id}}">{{user.post_author}}</a> on {{format_date created_at}}</p>
    <p>{{description}}</p>
    {{#if latitude}}
    <p>See it on a <a class="italic-h" id="black" href="https://www.google.com/maps/search/?api=1&query={{latitude}}%2C{{longitude}}"
        target="_blank">map</a></p>
    {{/if}}
    {{> tags this}}
    {{> like-controls this}}
    <p><a class="italic-h" id="comment-count" href="/post/{{id}}">{{comment_count}} comments</a></p>
  </div>
</article>
{{/each}}
{{#if loggedIn}}
<script src="/javascript/filter.js"></script>
<script src="/javascript/vote.js"></script>
{{/if}}