{{#if nickname}}
<h2>{{nickname}}'s Posts</h2>
{{else}}
{{#if tag_string}}
<h2>Posts tagged with {{tag_string}}</h2>
{{/if}}
{{/if}}
{{#each posts}}
<article id="post-{{id}}" class="post">
  {{#if image_url}}
  <img class="place-image" src="{{image_url}}" />
  {{/if}}
  <h2><a id="titttle" href="/post/{{id}}">{{title}}</a></h2>
  <p>Posted by: <a href="/user/{{user.post_author_id}}">{{user.post_author}}</a></p>
  <p>{{description}}</p>
  {{#if latitude}}
  <p>See it on a <a href="https://www.google.com/maps/search/?api=1&query={{latitude}}%2C{{longitude}}" target="_blank">map</a></p>
  {{/if}}
  {{> tags this}}
  <p>Created at: {{created_at}}</p>
  {{> like-controls this}}
  <p><a href="/post/{{id}}">{{comment_count}} comments</a></p>
</article>
<br><br>
{{/each}}
{{#if loggedIn}}
<script src="/javascript/vote.js"></script>
{{/if}}