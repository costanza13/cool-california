<section>
  <h2>Your Dashboard</h2>
  <p>Hi {{user.nickname}}. Welcome to your account dashboard! Here you can manage your existing posts, add a new one, or view
    posts you've liked or disliked.</p>

  <div class="user-tags">
    <ul class="selected-tags">
      {{#each user.tags}}
      <li>{{this.tag_name}}</li>
      {{/each}}
    </ul>
    <ul class="unselected-tags">
      {{#each other_tags}}
      <li>{{tag_name}}</li>
      {{/each}}
    </ul>
  </div>
  <p>
    <a href="/dashboard">View Posts</a> |
    <a href="/dashboard/likes">View Likes</a> |
    <a href="/dashboard/dislikes">View Dislikes</a>
  </p>
</section>

{{#if posts.length}}
<section>
  <h3>Your Posts</h3>
  <a href="/dashboard/create">Add a new post</a>
  <p>You've written {{posts.length}} {{format_plural 'post' posts.length}}, so far.</p>
  <ul>
    {{#each posts as |post|}}
    <li>
      <hr>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}
<script src="/javascript/vote.js"></script>