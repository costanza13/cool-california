<section>
  <div class="title-bar">
    <h2>Your Dashboard</h2>
    <nav class="subnav">
      <a class="dash-link italic-h" href="/dashboard">View Posts</a> |
      <a class="dash-link italic-h" href="/dashboard/likes">View Likes</a> |
      <a class="dash-link italic-h" href="/dashboard/dislikes">View Dislikes</a>
    </nav>
  </div>

  <div class="welcome-msg">
    <h4>Hi {{user.nickname}}!</h4>
    <p>
      Welcome to your account dashboard!
      <br><br>
      Here you can manage your existing posts, add a new one, or
      view posts you've liked or disliked.
    </p>
  </div>

  <div class="user-tags">
    <h3>Your Interests</h3>
    <p style="padding-bottom:0;text-align:center;">Select some tags to help find places you might like&hellip;</p>
    <ul class="tag-list">
      {{#each other_tags as |tag|}}
      <li class="tag-list-item">
        <input id="tag-{{tag.tag_id}}-btn" class="tag-input hidden" type="checkbox" value="{{tag.tag_id}}" {{#if
          tag.selected}} checked="checked" {{/if}} />
        <label for="tag-{{tag.tag_id}}-btn">{{tag.tag_name}}</label>
      </li>
      {{/each}}
    </ul>
  </div>
</section>


{{#if posts.length}}
<section id="your-posts">
  <div class="post-toolbar" style="padding-right:2rem;">
    <h3 id="your-posts-title">Your Posts ({{posts.length}})</h3>
    <a id="add-post-btn" class="italic-h" href="/dashboard/create"><i class="far fa-plus-square"></i> Add a new post</a>
  </div>
  <ul class="post-list">
    {{#each posts as |post|}}
    <li class="your-post">
      {{> post-info post}}
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}
<script src="/javascript/user-tags.js"></script>
<script src="/javascript/vote.js"></script>