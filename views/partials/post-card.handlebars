<article id="post-{{id}}" class="post">
  <div class="spd1">
    <h2><a id="titttle" href="/post/{{id}}">{{title}}</a></h2>
    {{#if image_url}}
    <img class="place-image small" src="{{image_url}}" />
    {{/if}}
    <div class="post-byline">
      Posted by <a class="italic-h" href="/user/{{user.post_author_id}}">{{user.post_author}}</a>
      on {{format_date created_at}}
    </div>
  </div>
  <div class="spd2">
    <p>{{description}}</p>
    {{> tags this}}
    <div class="social-bar">
      <p><a class="italic-h" id="comment-count" href="/post/{{id}}">{{comment_count}} comments</a></p>
      {{> like-controls this}}
    </div>
  </div>
</article>