<article class="post">
  <div class="title">
    <p id="title"><a href="/post/{{id}}">{{title}}</a> by <a
        href="/user/{{user.post_author_id}}">{{user.post_author}}</a></p>
    {{#if image_url_sized}}
    <p><img src="{{image_url_sized}}" /></p>
    {{/if}}
    <p>Image URL: [{{image_url}}]</p>
    <div>
      <p>{{description}}</p>
      <p>Coordinates: ({{latitude}}, {{longitude}})</p>
    </div>
    <p>Tags:
      {{#each tags}}
      [<a href="/tag/{{tag_id}}">{{tag_name}}</a>]
      {{/each}}
    </p>
    <p id="post-{{id}}-vote">
      <span class="vote-like">
        <input type="radio" class="vote-input" name="vote-{{id}}" id="like-button-{{id}}" value="like" {{#if
          liked}} checked="checked" {{/if}} data-post-id="{{id}}">
        <label for="like-button-{{id}}">Like (<span class="like-count">{{likes}}</span>)</label>
      </span>
      <span class="vote-dislike">
        <input type="radio" class="vote-input" name="vote-{{id}}" id="dislike-button-{{id}}" value="dislike"
          {{#if unliked}} checked="checked" {{/if}} data-post-id="{{id}}">
        <label for="dislike-button-{{id}}">Dislike (<span class="dislike-count">{{dislikes}}</span>)</label>
      </span>
      <input type="radio" class="vote-input" name="vote-{{id}}" id="novote-button-{{id}}" value="novote" {{#if
        novote}} checked="checked" {{/if}} data-post-id="{{id}}"> no vote
    </p>
  </div>
  <div class="meta">
    <p>Posted {{format_date created_at}}</p>
    <p><a href="/post/{{id}}">{{comment_count}} {{format_plural "comment" comment_count}}</a></p>
  </div>
</article>