<div class="v-spacer"></div>
<article class="post">
  <div class="spd1">
    <a id="titttle" href="/post/{{post.id}}">
      <h1 class="post-title">{{post.title}}</h1>
    </a>
    <img class="place-image" src="{{post.image_url}}" />
    <div class="post-byline">
      Posted by <a href="/user/{{post.user.post_author_id}}">{{post.user.post_author}}</a>
      on {{format_date post.created_at}}
    </div>
  </div>
  <div class="spd2">
    <div class="description">{{post.description}}</div>
    {{#if post.map_url}}
    <div class="map-container">
      <a href="https://www.google.com/maps/search/?api=1&query={{post.latitude}}%2C{{post.longitude}}" target="_blank"><img
          class="embedded-map" src="{{post.map_url}}" /></a>
    </div>
    {{/if}}
  </div>
  {{> tags post}}
  <div class="post-stats">
    <div><a id="comment-count" href="/post/{{post.id}}">{{post.comment_count}} {{format_plural 'comment' post.comment_count}}</a></div>
    {{> like-controls post}}
  </div>
</article>
{{#if showComments}}
{{> comments}}
{{/if}}
<script src="/javascript/vote.js"></script>